
import java.awt.*;
import java.awt.image.BufferedImage;

import javax.swing.*;


/**
 * tests the painter
 */

 public class painterTest extends Painter{

    private BufferedImage image;

    public painterTest(name, Painter p){
        super(name, p.getImage().getWidth(), p.getImage().getHeight());

        p.backgroundColorFinder();
        p.restore();
        image = p.getRecoloredImage();
    }

    @Override
	public void draw(Graphics g) {
		g.drawImage(image, 0, 0, null);
	}

    public static void main(String[] args) { 
		SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				new painterTest("zhou wenju", new Painter(loadImage("ZhouWenju.png"));
			}
		});
	}

 }